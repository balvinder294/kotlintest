<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

          
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/field_candidate_firstName"
              android:textStyle="bold"
              android:paddingRight="4dp"/>
            <TextView
              android:id="@+id/tv_firstName"
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          </LinearLayout>
          
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/field_candidate_lastName"
              android:textStyle="bold"
              android:paddingRight="4dp"/>
            <TextView
              android:id="@+id/tv_lastName"
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          </LinearLayout>
          
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/field_candidate_phoneNumber"
              android:textStyle="bold"
              android:paddingRight="4dp"/>
            <TextView
              android:id="@+id/tv_phoneNumber"
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          </LinearLayout>
          
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/field_candidate_email"
              android:textStyle="bold"
              android:paddingRight="4dp"/>
            <TextView
              android:id="@+id/tv_email"
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          </LinearLayout>
          
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/field_candidate_dateOfBirth"
              android:textStyle="bold"
              android:paddingRight="4dp"/>
            <TextView
              android:id="@+id/tv_dateOfBirth"
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          </LinearLayout>
          
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/field_candidate_gender"
              android:textStyle="bold"
              android:paddingRight="4dp"/>
            <TextView
              android:id="@+id/tv_gender"
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          </LinearLayout>
          
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/field_candidate_passportNumber"
              android:textStyle="bold"
              android:paddingRight="4dp"/>
            <TextView
              android:id="@+id/tv_passportNumber"
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          </LinearLayout>
          
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/field_candidate_workAuthorisationCategory"
              android:textStyle="bold"
              android:paddingRight="4dp"/>
            <TextView
              android:id="@+id/tv_workAuthorisationCategory"
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          </LinearLayout>
          
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/field_candidate_nationality"
              android:textStyle="bold"
              android:paddingRight="4dp"/>
            <TextView
              android:id="@+id/tv_nationality"
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          </LinearLayout>
          
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/field_candidate_workAuthorisation"
              android:textStyle="bold"
              android:paddingRight="4dp"/>
            <TextView
              android:id="@+id/tv_workAuthorisation"
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          </LinearLayout>
          
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/field_candidate_validity"
              android:textStyle="bold"
              android:paddingRight="4dp"/>
            <TextView
              android:id="@+id/tv_validity"
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          </LinearLayout>
          
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/field_candidate_experienceLevel"
              android:textStyle="bold"
              android:paddingRight="4dp"/>
            <TextView
              android:id="@+id/tv_experienceLevel"
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          </LinearLayout>
          
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/field_candidate_totalExperienceInYears"
              android:textStyle="bold"
              android:paddingRight="4dp"/>
            <TextView
              android:id="@+id/tv_totalExperienceInYears"
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          </LinearLayout>
          
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/field_candidate_totalExperienceInMonths"
              android:textStyle="bold"
              android:paddingRight="4dp"/>
            <TextView
              android:id="@+id/tv_totalExperienceInMonths"
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          </LinearLayout>
          
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/field_candidate_currentSalaryCurrency"
              android:textStyle="bold"
              android:paddingRight="4dp"/>
            <TextView
              android:id="@+id/tv_currentSalaryCurrency"
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          </LinearLayout>
          
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/field_candidate_currentSalary"
              android:textStyle="bold"
              android:paddingRight="4dp"/>
            <TextView
              android:id="@+id/tv_currentSalary"
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          </LinearLayout>
          
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/field_candidate_currentSalaryTimeUnit"
              android:textStyle="bold"
              android:paddingRight="4dp"/>
            <TextView
              android:id="@+id/tv_currentSalaryTimeUnit"
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          </LinearLayout>
          
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/field_candidate_skillTags"
              android:textStyle="bold"
              android:paddingRight="4dp"/>
            <TextView
              android:id="@+id/tv_skillTags"
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          </LinearLayout>
          
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/field_candidate_resumeTitle"
              android:textStyle="bold"
              android:paddingRight="4dp"/>
            <TextView
              android:id="@+id/tv_resumeTitle"
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          </LinearLayout>
          
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/field_candidate_profileSummary"
              android:textStyle="bold"
              android:paddingRight="4dp"/>
            <TextView
              android:id="@+id/tv_profileSummary"
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          </LinearLayout>
          
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/field_candidate_openForPhoneCall"
              android:textStyle="bold"
              android:paddingRight="4dp"/>
            <TextView
              android:id="@+id/tv_openForPhoneCall"
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          </LinearLayout>
          
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/field_candidate_openForEmailCommunication"
              android:textStyle="bold"
              android:paddingRight="4dp"/>
            <TextView
              android:id="@+id/tv_openForEmailCommunication"
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          </LinearLayout>
          
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/field_candidate_isInContract"
              android:textStyle="bold"
              android:paddingRight="4dp"/>
            <TextView
              android:id="@+id/tv_isInContract"
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          </LinearLayout>
          
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/field_candidate_contractClosingDate"
              android:textStyle="bold"
              android:paddingRight="4dp"/>
            <TextView
              android:id="@+id/tv_contractClosingDate"
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          </LinearLayout>
          
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/field_candidate_resumeFileName"
              android:textStyle="bold"
              android:paddingRight="4dp"/>
            <TextView
              android:id="@+id/tv_resumeFileName"
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          </LinearLayout>
          
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/field_candidate_resumeFileLocation"
              android:textStyle="bold"
              android:paddingRight="4dp"/>
            <TextView
              android:id="@+id/tv_resumeFileLocation"
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          </LinearLayout>
          
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/field_candidate_resumeFileUploadedOn"
              android:textStyle="bold"
              android:paddingRight="4dp"/>
            <TextView
              android:id="@+id/tv_resumeFileUploadedOn"
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          </LinearLayout>
          
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/delete_button"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/delete" />

                <Button
                    android:id="@+id/edit_button"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
