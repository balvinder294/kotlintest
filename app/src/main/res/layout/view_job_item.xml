<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

          
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/field_job_jobName"
              android:textStyle="bold"
              android:paddingRight="4dp"/>
            <TextView
              android:id="@+id/tv_jobName"
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          </LinearLayout>
          
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/field_job_companyName"
              android:textStyle="bold"
              android:paddingRight="4dp"/>
            <TextView
              android:id="@+id/tv_companyName"
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          </LinearLayout>
          
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/field_job_location"
              android:textStyle="bold"
              android:paddingRight="4dp"/>
            <TextView
              android:id="@+id/tv_location"
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          </LinearLayout>
          
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/field_job_positionType"
              android:textStyle="bold"
              android:paddingRight="4dp"/>
            <TextView
              android:id="@+id/tv_positionType"
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          </LinearLayout>
          
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/field_job_jobTags"
              android:textStyle="bold"
              android:paddingRight="4dp"/>
            <TextView
              android:id="@+id/tv_jobTags"
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          </LinearLayout>
          
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/field_job_jobDescription"
              android:textStyle="bold"
              android:paddingRight="4dp"/>
            <TextView
              android:id="@+id/tv_jobDescription"
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          </LinearLayout>
          
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/field_job_applyUrl"
              android:textStyle="bold"
              android:paddingRight="4dp"/>
            <TextView
              android:id="@+id/tv_applyUrl"
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          </LinearLayout>
          
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/field_job_createdBy"
              android:textStyle="bold"
              android:paddingRight="4dp"/>
            <TextView
              android:id="@+id/tv_createdBy"
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          </LinearLayout>
          
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/field_job_createdAt"
              android:textStyle="bold"
              android:paddingRight="4dp"/>
            <TextView
              android:id="@+id/tv_createdAt"
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          </LinearLayout>
          
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/field_job_modifiedBy"
              android:textStyle="bold"
              android:paddingRight="4dp"/>
            <TextView
              android:id="@+id/tv_modifiedBy"
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          </LinearLayout>
          
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/field_job_modifiedAt"
              android:textStyle="bold"
              android:paddingRight="4dp"/>
            <TextView
              android:id="@+id/tv_modifiedAt"
              style="@style/TextAppearance.AppCompat.Medium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          </LinearLayout>
          
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/delete_button"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/delete" />

                <Button
                    android:id="@+id/edit_button"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
